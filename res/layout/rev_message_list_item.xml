<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
        
		          <TableLayout  android:id="@+id/l1"         
			          android:layout_width="fill_parent"
		              android:layout_height="wrap_content"
		              >		
		              
		             <TableRow >
			        <ImageView
			            android:id="@+id/user_photo"
			            android:layout_width="40dp"
			            android:layout_height="40dp"
			            android:paddingLeft="10dp"
			        	android:paddingTop="2dip"
			           	android:src="@drawable/renma"
			           />

					 <TextView
		              android:id="@+id/user_name"
		              android:layout_width="178dp"
		              android:layout_height="fill_parent"
		              android:layout_marginLeft="6dp"
		              android:gravity="left"
		              android:paddingTop="10dip"
		              android:singleLine="true"
		              android:text="小风"
		              android:textColor="@color/gray"
		              android:textSize="14dip" />
					  <TextView
			              android:id="@+id/rev_message_time"
			              android:layout_width="wrap_content"
		              	  android:layout_height="fill_parent"
		              	  android:paddingTop="10dip"
		              	  android:layout_weight="1"
		              	  android:paddingRight="5dp"
		              	  android:gravity="right"
		              	  android:text="下午 16:45"
		                       
		              	  android:singleLine="true"
		              	  android:textColor="@color/gray"
			              />
			          </TableRow>
					
				
					  <LinearLayout android:layout_width="match_parent"
		              android:layout_height="1dp" 
		              android:background="#F7F7F7"
		             />
		
				<RelativeLayout
				    android:layout_width="fill_parent"
				    android:layout_height="67dp"
				    android:padding="5dip" >

		               <TextView
		                   android:id="@+id/rev_message_title"
		                   android:layout_width="wrap_content"
		                   android:layout_height="wrap_content"
		                   android:layout_weight="1"
		                   android:gravity="center"
		                   android:padding="2dip"
		                   android:singleLine="true"
		                   android:text="人马"
		                   android:textColor="@color/gray"
		                   android:textSize="14dip" />

		               <TextView
		                   android:id="@+id/rev_message_content"
		                   android:layout_width="wrap_content"
		                   android:layout_height="wrap_content"
		                   android:layout_alignParentLeft="true"
		                   android:layout_below="@+id/rev_message_title"
		                   android:layout_weight="1"
		                   android:gravity="center"
		                   android:padding="2dip"
		                   android:singleLine="true"
		                   android:text="这是唯一一个正常的朋友"
		                   android:textColor="@color/gray"
		                   android:textSize="14dip" />
				
					 </RelativeLayout>
		

		        
		 </TableLayout>
		      

		          <RelativeLayout
		              android:layout_width="fill_parent"
		              android:layout_height="wrap_content"
		              android:orientation="horizontal"
		              android:paddingLeft="8dip" >

			          <TextView
			              android:id="@+id/rev_message_amount"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:gravity="center"
			              android:padding="2dip"
			              android:singleLine="true"
			              android:text="有偿消息"
			              android:textColor="@color/gray"
			              android:textSize="9dip" android:background="@drawable/keyword_btn" />

			          <TextView
			              android:id="@+id/rev_message_send_type"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:layout_alignParentTop="true"
			              android:layout_marginLeft="26dp"
			              android:layout_toRightOf="@+id/rev_message_amount"
			              android:gravity="center"
			              android:padding="2dip"
			              android:singleLine="true"
			              android:text="这是唯"
			              android:textColor="@color/gray"
			              android:textSize="9dip" android:background="@drawable/keyword_btn" />

			          <TextView
			              android:id="@+id/rev_message_send_type"
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"
			              android:layout_alignParentTop="true"
			              android:layout_marginLeft="78dp"
			              android:layout_toRightOf="@+id/rev_message_amount"
			              android:background="@drawable/keyword_btn"
			              android:gravity="center"
			              android:padding="2dip"
			              android:singleLine="true"
			              android:text="信用值"
			              android:textColor="@color/gray"
			              android:textSize="9dip" />

		          </RelativeLayout>           
           
		      
</LinearLayout>